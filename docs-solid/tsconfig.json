{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "types": ["vite/client"],
    "isolatedModules": true,
    "paths": {
      "@nordstjerna/ui": ["../packages/ui"],
      "~/*": ["./src/*"]
    }
  }
}